{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "讨论 id"
    },
    "message": {
      "type": "string",
      "description": "讨论内容"
    },
    "createdAt": {
      "type": "string",
      "description": "创建时间"
    },
    "createdBy": {
      "description": "创建人信息",
      "$ref": "#/components/schemas/%E4%BA%BA%E5%91%98%E5%AF%B9%E8%B1%A1"
    },
    "replyToAuthor": {
      "description": "被回复人信息",
      "$ref": "#/components/schemas/%E4%BA%BA%E5%91%98%E5%AF%B9%E8%B1%A1"
    },
    "replyToId": {
      "type": "string",
      "description": "被回复的讨论 id"
    },
    "organizationId": {
      "type": "string",
      "description": "组织 id"
    },
    "mentions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "description": "人员 id"
          },
          "fullname": {
            "type": "string",
            "description": " 名称"
          },
          "avatar": {
            "type": "string",
            "description": "头像地址"
          },
          "status": {
            "type": "string",
            "description": "状态"
          }
        },
        "required": [
          "accountId",
          "fullname",
          "avatar",
          "status"
        ]
      }
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "originalFilename": {
            "type": "string",
            "description": "文件名称"
          },
          "ext": {
            "type": "string",
            "description": "文件类型"
          },
          "filesize": {
            "type": "string",
            "description": "文件大小"
          },
          "downloadUrl": {
            "type": "string",
            "description": "下载地址"
          }
        },
        "required": [
          "ext",
          "filesize",
          "downloadUrl"
        ]
      },
      "description": "附件信息"
    }
  },
  "required": [
    "id",
    "message",
    "createdAt",
    "createdBy",
    "replyToAuthor",
    "replyToId",
    "organizationId",
    "mentions",
    "attachments"
  ]
}